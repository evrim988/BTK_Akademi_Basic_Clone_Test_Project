@model IEnumerable<Candidate>

@{
    ViewData["Title"] = "Index";
}

@if(Model.Count() > 0)
{
    <h6 class="display-6">Katılımcı Listesi</h6>

    <table class="table table-hover table-striped">
        <thead>
            <th>Email</th>
            <th>Ad ve Soyad</th>
            <th>Yaş</th>
            <th>Başvuru Tarihi</th>
            <th>Başvurulan Kurs</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.FullName</td>
                    <td>@item.Age</td>
                    <td>@item.RegistiredDate</td>
                    <td>@item.SelectedCourse</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-info">
        Kurslara ait herhangi bir öğrenci kayıt bulunamamıştır. Kayıt olmak için <a class="alert-link" asp-action="Register" asp-controller="Course">Tıklayınız</a>
    </div>
}


